<div id="kanban-board" class="container-fluid">
	<div class="row text-center">
		<div id="backlog-col-header" class="col-sm-3">
			<h3>Backlog</h3>
		</div>
		<div id="todo-col-header" class="col-sm-3">
			<h3>ToDo</h3>
		</div>
		<div id="inprogress-col-header" class="col-sm-3">
			<h3>In Progress</h3>
		</div>
		<div id="done-col-header" class="col-sm-3">
			<h3>Done</h3>
		</div>
	</div>
	<div class="row">
		<div id="backlog-col" class="col-sm-3 issue-col">
			{{#each backlog}}
				<div class="issue">
					<span class="title">{{title}}</span>
					<img src="{{user.avatar_url}}" class="avatar" />
					<div class="description">{{body}}</div>
					<div class="labels">
						{{#each labels}}
							<span style="background-color:#{{color}}">{{name}}</span>
						{{/each}}
					</div>
					<div class="baseline">
						<span class="updated">{{formatDate updated_at}}</span>
						|
						<span class="reponum">{{reponame}}#{{number}}</span>
					</div>
				</div>
			{{/each}}
		</div>
		<div id="todo-col" class="col-sm-3 issue-col">
			
		</div>
		<div id="inprogress-col" class="col-sm-3 issue-col">
			
		</div>
		<div id="done-col" class="col-sm-3 issue-col">
			
		</div>
	</div>
</div>